# Event-Based Deposit Listener Service Configuration
# Copy this file to .env and update with your actual values

# Supabase Configuration (Required)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Blockchain RPC URLs
BSC_RPC_URL=https://bsc-dataseed1.binance.org/
# Alternative BSC RPC URLs:
# BSC_RPC_URL=https://bsc-dataseed2.binance.org/
# BSC_RPC_URL=https://bsc-dataseed3.binance.org/

# Service Configuration
LISTENER_INTERVAL_MS=30000
NODE_ENV=production

# Optional: Custom TRON Grid URL (defaults to https://api.trongrid.io)
# TRON_GRID_URL=https://api.trongrid.io

# Logging Configuration (for PM2)
LOG_LEVEL=info
